{
  "compilerOptions": {
    "target": "es2016",

    /* Modules */
    "module": "commonjs",                                /* Specify what module code is generated. */
     "rootDir": "src",

    /* Emit */
     "declaration": true,
     "declarationMap": true,
     "sourceMap": true,
     "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
